@model Student
@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #bcc7e7;
    }

    h1 {
        font-weight: bold;
        color: #2c3e50;
    }

</style>

<div class="mb-3 mt-3 text-center">
    <h1>Details</h1>
</div>

<div class="container my-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h3 class="card-title mb-3">Student Information</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>ID:</strong> @Model.StudentID</li>
                <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            </ul>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Courses</h4>
            <table class="table table-bordered table-striped table-hover align-middle text-center mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Course Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var crs in Model.Courses)
                    {
                        <tr>
                            <td>@crs.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="container mb-3">
    <div class="d-flex gap-2">
        <a href="/Student/index" class="btn btn-primary flex-fill">Show All Student</a>
        <a href="/Student/Edit/@Model.StudentID" class="btn btn-primary flex-fill">Edit</a>
        <a href="/Student/RegisterCourses/@Model.StudentID" class="btn btn-primary flex-fill">Register Courses</a>
        <a href="/Student/Delete/@Model.StudentID" class="btn btn-danger flex-fill">Delete</a>
    </div>
</div>
